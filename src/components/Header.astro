---
import { Image } from 'astro:assets';
import logo from '@/src/assets/images/digzest-logo.svg';
---

<header>
    <div class='nav-container'>
        <div class='nav-logo'>
            <a href='/'>
                <Image src={logo} alt='website logo' width={100} height={100} />
            </a>
        </div>
        <div class='nav-menu'>
            <a class='nav-menu-item' href='/posts'>Posts</a>
            <a class='nav-menu-item' href='/projects'>Projects</a>
        </div>
    </div>
</header>

<style>
    .nav-container {
        display: flex;
        justify-content: space-between;
        margin-top: 1.5rem;
        margin-bottom: 5rem;
    }
    .nav-logo {
        display: flex;
        align-items: center;
    }
    .nav-menu {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
    }
    .nav-menu-item {
        color: white;
        padding: 0.7rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        text-align: center;
    }
</style>
